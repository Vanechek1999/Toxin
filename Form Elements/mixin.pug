mixin DropdownPeople(h3, p1, p2, p3, p4)
    .DropdownPeople
        h3=h3
        .flex
            input(type="text" placeholder="Сколько гостей")
            button.btn_DropdownPeople
        .DropdownPeople_form
            .flex
                .form_list-title
                    h3=p1
                    h3=p2
                    h3=p3
                .form_list
                    .value.flex
                        button(class="minus4") -
                        input(type="text", class="value4", value="0")
                        button(class="plus4") +
                    .value.flex
                        button(class="minus5") -
                        input(type="text", class="value5", value="0")  
                        button(class="plus5") +
                    .value.flex
                        button(class="minus6") -
                        input(type="text", class="value6", value="0")  
                        button(class="plus6") +
            h3.last=p4
mixin richCheckboxButtons(h3, p1, p2, p3, p4)
        h3=h3
        .richCheckboxButtons.flex
            input(type="checkbox" )
            .richCheckboxButtons_text.column
                h3=p1
                .richCheckboxButtons_subtitle=p2
        .richCheckboxButtons.flex
            input(type="checkbox")
            .richCheckboxButtons_text.column
                h3=p3
                .richCheckboxButtons_subtitle=p4

mixin RangeSlider(h3, p1, p2)
    .rangeSlider
        .flex
            h3=h3
            .rangeSlider_value.flex
                p(id="Range_value-first")=p1
                p(id="Range_value-second")=p2
        .rangeSlider_middle
            .rangeSlider_multi
                input(type="range" id="input-left" step="500" min="0" max="15000" value="5000")
                input(type="range" id="input-right" step="500" min="0" max="15000" value="10000")
            .fakeRangeSlider
                .track
                .range
                .thumb.left
                .thumb.right

mixin Button(h3, p1, p2, p3)
    .complexButton
        h3=h3
        .flex
            .border_fill
                button
                    h3=p1
            .border_fill-hover
                button
                    h3=p1
        .flex
            .border_Nofill
                button
                    h3=p1
            .border_Nofill-hover
                button
                    h3=p1
        .complexButton_lastText.flex
            h3=p1
            h3=p1
mixin ButtonPay()
    .ButtonPay.flex
        button.pay
            h3 Перейти к оплате
        button.arrow
            img(src="img/arrow_BYU.svg", alt="")
