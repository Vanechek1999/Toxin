    .firstGrid_form-text.flex.space-between
        h3=h3
        p=p
    input(type="text", placeholder=placeholder).email
mixin Dropdown()
    select.guests
        option Сколько гостей
mixin MaskedDate(h3)
    .MaskedDate
        h3=h3
        input(type="text" id="date" placeholder="ДД/ММ/ГГГГ").date
mixin changeDate(h3)
    .changeDate.flex
        .column 
            h3=h3
            input(type="text" id="datepicker" placeholder="ДД.ММ.ГГГГ")
        .column 
            h3=h3
            input(type="text" id="datepicker1" placeholder="19.08.2019")
mixin rangeDate(h3)
    .rangeDate 
        h3=h3
        input(type="text" id="d" placeholder="19 авг - 23 авг")
mixin changeEmail(h3)
    .changeEmail
        h3=h3
        .flex
            input(type="text" placeholder="Email")
            button
mixin DropdownDefault(h3, p)
     .DropdownDefault
        .DropdownDefault_title.flex.space-between
            h3=h3
            p=p
        .flex
            input(type="text" placeholder="2 спальни, 2 кровати...")
            button.btn_Dropdown
mixin DropdownExpanded(h3, p, text_bedroom, text_bed, text_bathrooms)
    .DropdownExpanded
        .DropdownExpanded_title.flex.space-between
            h3=h3
            p=p
        .flex
            input(type="text" placeholder="2 спальни, 2 кровати...")
            button.btn_Dropdown
        .expanded
            .flex
                .expanded_list-title
                    h3=text_bedroom
                    h3=text_bed
                    h3=text_bathrooms
                .value_list
                    .value.flex
                        button(class="minus1") -
                        input(type="text", class="value1", value="0")
                        button(class="plus1") +
                    .value.flex
                        button(class="minus2") -
                        input(type="text", class="value2", value="2")  
                        button(class="plus2") +
                    .value.flex
                        button(class="minus3") -
                        input(type="text", class="value3", value="2")  
                        button(class="plus3") +
mixin expandableCheckboxList(h3)
    .expandableCheckboxList
        .flex 
            h3=h3
            button
mixin expandableCheckboxListActive(h3, p1, p2, p3, p4, p5, p6)
    .expandableCheckboxListActive
        .flex 
            h3=h3
            button(id="check" class="check_drop")
        .checkboxlist.column
            .flex
                input(type="checkbox" class="custom_checkbox" id="first_CheckboxListActive")
                label(for="first_CheckboxListActive")=p1
            .flex
                input(type="checkbox" class="custom_checkbox" checked id="second_CheckboxListActive")
                label(for="second_CheckboxListActive")=p2
            .flex
                input(type="checkbox" class="custom_checkbox" checked id="third_CheckboxListActive")
                label(for="third_CheckboxListActive")=p3
            .flex
                input(type="checkbox" class="custom_checkbox" checked id="fourth_CheckboxListActive")
                label(for="fourth_CheckboxListActive")=p4
            .flex
                input(type="checkbox" class="custom_checkbox" id="fifth_CheckboxListActive")
                label(for="fifth_CheckboxListActive")=p5
            .flex
                input(type="checkbox" class="custom_checkbox" id="sixth_CheckboxListActive")
                label(for="sixth_CheckboxListActive")=p6
mixin mark(src, title, subtitle)
    .mark.flex
        img(src=src, alt="")
        .mark_text
            .mark_text-title=title
            .mark_text-subtitle=subtitle
//Second Grid
mixin checkBox(p1, p2, p3)
    .checkBox
        h3 Checkbox Buttons
        .list
            .flex
                input(type="checkbox" class="custom_checkbox" id="first_check")
                label(for="first_check")=p1
            .flex
                input(type="checkbox" class="custom_checkbox" id="second_check")
                label(for="second_check")=p2
            .flex
                input(type="checkbox" class="custom_checkbox" id="third_check")
                label(for="third_check")=p3
mixin radio(h3, p1, p2)
    .radio
        h3=h3
        .list_radio.flex 
            input(type="radio" name="radio" class="custom_radio" id="first_radio")
            label(for="first_radio")=p1
            input(type="radio" name="radio" class="custom_radio" id="second_radio")
            label(for="second_radio")=p2

mixin toggle(p1)
    .toggle.flex
        label.switch
            input(type="checkbox")
            span(class="slider round" )
        p=p1
mixin likeButton(h3, p1, p2)
    .likeButton
        h3=h3
        .flex
            button.flex
                svg
                p=p1
            button.flex
                svg
                p=p2
